            font_name: "DPoppins"
            font_size: "15sp"
            pos_hint: {"center_x":0.84,"center_y":0.74}
            #theme_text_color: "Custom"
            #text_color: rgba(222, 254, 237,255)
        MDBoxLayout:
            pos_hint: {"center_x":0.5,"center_y":0.5}
            size_hint_x: 0.85
            size_hint_y: None
            padding: 5
            MDLabel:
                id: notice
                text: ""
                pos_hint:{"center_x":0.5,"center_y":0.5}
