MDScreen:
    name: "noticedetailstostu"
    MDFloatLayout:
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.95}
            size_hint_y: 0.15
        MDLabel:
            text: "Karimganj College"
            font_name: "DPoppins"
            font_size: "17sp"
            pos_hint: {"center_x":0.75,"center_y":0.97}
            theme_text_color: "Custom"
            text_color: rgba(222, 254, 237,255)
        MDLabel:
            text: "Placement Cell"
            font_name: "DPoppins"
            font_size: "17sp"
            pos_hint: {"center_x":0.78,"center_y":0.92}
            theme_text_color: "Custom"
            text_color: rgba(222, 254, 237,255)
        MDIconButton:
            icon : "chevron-left"
            pos_hint : {"center_x" :0.07, "center_y" :0.95}
