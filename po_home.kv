
MDScreen:
    name: "pohome"
    #md_bg_color: rgba(95, 176, 179, 255)
    MDFloatLayout:
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.04}
        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":0.15,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                root.manager.current = 'pohome'
                root.manager.transition.direction = "left"
        MDIconButton:
            icon: "bell"
            pos_hint: {"center_x":0.4,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                root.manager.current = 'ponotice'
                root.manager.transition.direction = "left"
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x":0.65,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                app.update_date_of_add_notice()
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":0.852,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_release:
                app.shw_image_po()
                app.display_data3()
                root.manager.current = 'poprofile'
                root.manager.transition.direction = "left"
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.95}
        MDLabel:
            text: "Placement Cell"
            font_name: "DPoppins"
            font_size: "25sp"
            pos_hint: {"center_x":0.7,"center_y":0.94}
            theme_text_color: "Custom"
            text_color: rgba(222, 254, 237,255)

