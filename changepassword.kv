MDScreen:
    name: "updatepassword"
    MDFloatLayout:
        MDIconButton:
            icon : "arrow-left"
            pos_hint : {"center_x":0.1,"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'
        Image:
            source: "a1.png"
            pos_hint: {"center_x":0.55,"center_y":0.8}
            size_hint: 0.8,0.8
        MDLabel:
            text: "Update"
            font_name: "MPoppins"
            font_size: "25dp"
            pos_hint: {"center_x":0.6,"center_y":0.6}
            theme_text_color: "Custom"
            text_color: rgba(97,93,91,255)
        MDLabel:
            text: "Your Password...."
            font_name: "MPoppins"
            font_size: "20dp"
            pos_hint: {"center_x":0.775,"center_y":0.55}
            theme_text_color: "Custom"
            text_color: rgba(97,93,91,255)
        MDTextField:
            id: newpass
            hint_text: "Enter New Password"
            pos_hint: {"center_x":0.5,"center_y":0.4}
            size_hint_x: 0.9
            mode: "rectangle"
        MDRaisedButton:
            text: "Submit"
            size_hint_x:0.9
            pos_hint: {"center_x":0.5,"center_y":0.15}
            size_hint_y: 0.1
            on_release:
                app.updatepassword()