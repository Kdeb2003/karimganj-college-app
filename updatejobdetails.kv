MDScreen:
    name: "updatejobdetails"
    MDFloatLayout:
        MDIconButton:
            icon : "chevron-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = 'right'
                app.show_jobdetails_tocompanyagain()

        BoxLayout:
            size_hint: (1, 1)
            padding : 35

            ScrollView:
                bar_color: [0, 0, 255, 1]
                bar_width: 2
                BoxLayout:

                    spacing: 30
                    #size: (self.parent.width, self.parent.height)
                    #size: (self.parent.width, self.parent.height-1)
                    id: container
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    MDLabel:
                        size_hint: (1,None)
                        pos_hint :{"center_x": 0.73, "center_y": 0.5}
                        color: rgba(95, 176, 179, 255)
                        markup: True
                        text: "[b]Update Job[/b]"
                        markup: True
                        font_size: "25sp"
                    MDTextField:
                        id: jobcodeprovideid
                        markup: True
                        hint_text : "Job Code"
                        helper_text: "Eg: g1"
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1

                    MDTextField:
                        id: jobtitleprovideid
                        markup: True
                        hint_text : "Job Title"
                        helper_text: "Eg: Analyst, Software Developer, etc."
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1

                    MDTextField:
                        id: companyidprovide
                        markup: True
                        hint_text : "Company ID"
                        helper_text: "Provide Your Company ID"
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1

                    MDTextField:
                        id: companynameprovideid
                        markup: True
                        hint_text : "Company Name"
                        helper_text: "Eg: Google, Microsoft, etc."
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1

                    MDTextField:
                        id: jobdescriptionprovide
                        markup: True
                        hint_text : "Job Description"
                        helper_text: "Provide the description of the job"
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1

                    MDTextField:
                        id: salaryprovideid
                        markup: True
                        hint_text : "Salary Range"
                        helper_text: "Eg: 5 - 6 LPA"
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1
                    MDTextField:
                        id : dateofprovidingjob
                        markup: True
                        hint_text : "Job Providing Date"
                        helper_text: "Format: YYYY-MM-DD"
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1
                    MDTextField:
                        id : lastdateofapplying
                        markup: True
                        hint_text : "Last Applying Date"
                        helper_text: "Format: YYYY-MM-DD"
                        helper_text_mode: "persistent"
                        mode : "rectangle"
                        size_hint : (1, None)
                        height : 300
                        line_color_normal: 95/255, 176/255, 179/255, 1
                        line_color_focus: 95/255, 176/255, 179/255, 1
                        text_color_normal: 95/255, 176/255, 179/255, 1
                        text_color_focus: 95/255, 176/255, 179/255, 1
                        cursor_color: 95/255, 176/255, 179/255, 1
                        foreground_color: 95/255, 176/255, 179/255, 1
                        hint_text_color_normal: 95/255, 176/255, 179/255, 1
                        hint_text_color_focus: 95/255, 176/255, 179/255, 1
                    MDLabel:
                        text: ""
                    MDLabel:
                        text: ""
                    MDLabel:
                        text: ""
        MDFloatLayout:
            size_hint: None, None
            size: dp(200), dp(60)
            pos_hint: {"center_x":0.5,"center_y":0.08}
            canvas.before:
                Color:
                    rgba: (205/255, 242/255, 225/255, 200/255)  # Background color
                    #rgba: (255/255, 255/255, 255/255, 150/255)  # Background color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius : [15,15,15,15]
        MDTextButton:
            text: "UPDATE"
            pos_hint: {"center_x":0.8,"center_y":0.08}
            size_hint_x: 0.8
            size_hint_y: 0.05
            font_size: "17dp"
            bold : True
            on_release:
                app.updatejobdetails(jobcodeprovideid.text, jobtitleprovideid.text,companyidprovide.text, companynameprovideid.text, jobdescriptionprovide.text, salaryprovideid.text, dateofprovidingjob.text, lastdateofapplying.text)
