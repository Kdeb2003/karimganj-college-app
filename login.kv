MDScreen:
    name: "login"
    MDFloatLayout:
        #md_bg_color: 186/255, 255/255, 255/255,1
        MDLabel:
            text : "College\nCampus Recruitment System"
            font_name : "DPoppins"
            font_size : "18sp"
            pos_hint : {"center_x":0.5,"center_y": 0.95}
            halign : "center"
            color: rgba( 34, 34 ,34, 255)


        MDFloatLayout:
            md_bg_color: rgba(0,0,0,255)
            size_hint : 0.9, 0.002
            pos_hint: {"center_x" :0.5, "center_y": 0.89}




        MDLabel:
            text : "Sign in to continue"
            font_name: "MPoppins"
            font_size : "20sp"

            pos_hint : {"center_x":0.58,"center_y": 0.8}

            color: rgba(0,0,72, 255)

        MDFloatLayout:
            size_hint: 0.7, 0.7
            pos_hint: {"center_x":0.5, "center_y":0.6}
            MDTextField:
                id: email_id
                hint_text: "Email ID"
                icon_left : "account"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x : None
                width : 350
                #mode : "rectangle"
        MDFloatLayout:
            size_hint: 0.7, 0.7
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: password
                hint_text: "Password"
                icon_left : "key"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x : None
                width : 350
                #mode : "rectangle"
                password: True
                on_text: app.on_text(self, self.text)
        MDIconButton:
            id: toggle_icon
            icon: "checkbox-blank-outline"
            pos_hint: {"center_x": 0.1, "center_y": 0.43}
            on_release: app.toggle_password(password, toggle_icon)
            disabled:True

        MDLabel:
            text: "View Password"
            font_name: "MPoppins"
            font_size : "13sp"
            pos_hint : {"center_x":0.67,"center_y": 0.43}
            #color: rgba(0,0,72, 255)

        MDFlatButton:
            text: "LOGIN"
            size_hint_x: 0.85
            size_hint_y:0.05
            pos_hint : {"center_x":0.5,"center_y":0.33}
            font_name: "MPoppins"
            md_bg_color : rgba(95, 176, 179, 255)
            elevation: 0
            on_release:
                app.receive_data(email_id, password)

                #root.manager.transition.direction = "left"
                #root.manager.current = "home"




        MDTextButton:
            text: "Forgot Password?"
            pos_hint:{"center_x":0.5,"center_y":0.25}
            #size_hint:0.5,0.2
            color: rgba(68,78,132,255)
            font_size: "15sp"
            font_name: "BPoppins"
            on_release:
                root.manager.current = "forgetpassword"
        MDLabel:
            text: "or"
            color: rgba(52,0,231,255)
            font_size : "13sp"
            pos_hint: {"center_x":0.98,"center_y":0.20}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint : 0.3, 0.002
            pos_hint: {"center_x" :0.3, "center_y": 0.198}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint : 0.3, 0.002
            pos_hint: {"center_x" :0.7, "center_y": 0.198}
        MDLabel:
            text: "Social Media Login"
            font_name : "BPoppins"
            font_size : "13sp"
            halign: "center"
            pos_hint: {"center_y": 0.16}
            color: rgba(135,133,193,255)
        MDGridLayout:
            cols:1
            size_hint: 0.48,0.07
            pos_hint: {"center_x":0.5,"center_y":0.1}
            Image:
                source: "7123025_logo_google_g_icon.png"
        MDLabel:
            text: "New user?"
            font_name : "BPoppins"
            font_size : "13sp"
            pos_hint :{"center_x": 0.78, "center_y": 0.04}
            color: rgba(0,0,200,255)
        MDTextButton:
            text: "Register->"
            size_hint: 0.5,0.01
            font_size : "13sp"
            pos_hint : {"center_x":0.78,"center_y":0.04}
            font_name: "MPoppins"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "selection"









