MDScreen:
    MDBoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            padding: dp(10)
            MDLabel:
                text: "Register"
                font_style: 'H5'
                theme_text_color: "Custom"
                text_color: rgba(0,220,230,255)
                halign: 'center'
                valign: 'center'
                font_size: "50dp"

        ScrollView:
            size_hint_y: None
            height: dp(500)

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(10)
                spacing: dp(20)

                MDTextField:
                    id: username
                    hint_text: "Username"
                    required: True
                    mode: "rectangle"
                    multiline: False

                MDTextField:
                    id: email
                    hint_text: "Email"
                    required: True
                    mode: "rectangle"
                    multiline: False

                MDTextField:
                    id: password
                    hint_text: "Password"
                    required: True
                    mode: "rectangle"
                    multiline: False

                MDTextField:
                    id: confirm_password
                    hint_text: "Confirm Password"
                    required: True
                    mode: "rectangle"
                    multiline: False

                MDTextField:
                    id: phone_number
                    hint_text: "Phone Number"
                    required: True
                    mode: "rectangle"
                    multiline: False

                MDTextField:
                    id: address
                    hint_text: "Address"
                    required: True
                    mode: "rectangle"
                    multiline: True
                MDRaisedButton:
                    text: "Submit"
                    font_size: "20dp"
                    size_hint_x: 0.99
                    width: root.width
                    halign: "center"
                    pos_hint: {"center_x": 0.5}
                    on_press:
                        app.submit(username.text,email.text, password.text, confirm_password.text,phone_number.text,address.text)

