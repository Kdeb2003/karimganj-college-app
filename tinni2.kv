#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT
#:import Animation kivy.animation.Animation
<Spacer@Widget>
    size_hint_y: None
    height: "12dp"


<CardItem@RelativeLayout>
    size_hint_y:None
    height:'150dp'
    radius:[50]
    elevation: 0
    MDCard:
        Widget:
            size_hint_x: 0.8

        MDBoxLayout:
            orientation: "vertical"
            id: box
            padding: 0,0,"48dp","12dp"
            MDLabel:
                text: "Hi User"
                bold: True
                font_style: "H6"
                adaptive_height: "True"
                pos_hint: {"center_x":0.5,"center_y":0.5}
            Spacer:
            MDLabel:
                text: "Know about us"
                font_style: "Caption"
                adaptive_height: "True"
                pos_hint: {"center_x":0.5,"center_y":0.6}
            Spacer:

            MDFlatButton:
                elevation: 0
                text:"Click Me"
                -width: box.width
                -height: "48dp"
                md_bg_color: rgba(95, 176, 179, 255)
                on_release: Animation(x=0, d=0.8, t="out_back").start(box_info)


    MDRelativeLayout:
        radius: [0,15,15,0]
        id: box_info
        size_hint_y: None
        height: root.height -dp(24)
        md_bg_color: rgba(95, 176, 179, 255)
        x: STANDARD_INCREMENT * 2-root.width - STANDARD_INCREMENT
        y: dp(12)
        on_touch_down:
            Animation(x=STANDARD_INCREMENT * 2-root.width - STANDARD_INCREMENT, d=0.8, t="in_back").start(box_info)
        Image:
            source: "akdmnewkclogo.png"
            size_hint_x: None
            width: STANDARD_INCREMENT * 2.5
            x: root.width - self.width + STANDARD_INCREMENT
        MDLabel:
            text: "Karimganj College"
            font_style: "H6"
            adaptive_height: True
            bold:True
            #x: "12dp"
            #y:"4dp"
            pos_hint:{"center_x":0.7,"center_y":0.7}
        MDLabel:
            text: "ESTD: 1946 "
            font_style: "Caption"
            adaptive_height: "True"
            pos_hint: {"center_x":0.7,"center_y":0.5}
        MDLabel:
            text: "Location: Karimganj "
            font_style: "Caption"
            adaptive_height: "True"
            pos_hint: {"center_x":0.7,"center_y":0.3}
        MDIconButton:
            icon: "arrow-right-circle-outline"
            #badge_icon: "numeric-10"
            pos_hint: {"center_x": 0.6, "center_y":0.12}
            on_release:
                import webbrowser
                webbrowser.open('http://www.karimganjcollege.ac.in/')

        MDLabel:
            text: "Click to know more "
            font_style: "Caption"
            adaptive_height: "True"
            pos_hint: {"center_x":0.7,"center_y":0.12}

