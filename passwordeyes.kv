MDScreen:
    name: "pass"
    MDFloatLayout:
        MDTextField:
            id: password_field
            mode: "rectangle"
            hint_text: "help"
            pos_hint: {"center_x": 0.45, "center_y": 0.5}
            size_hint_x: 0.8
            password: True
            on_text: app.on_text(self, self.text)
        MDIconButton:
            id: toggle_icon
            icon: "checkbox-blank-outline"
            pos_hint: {"center_x": 0.92, "center_y": 0.5}
            on_release: app.toggle_password(password_field, toggle_icon)
            disabled:True