MDScreen:
    name: "updatepassword"
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_x": 0.1, "center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'forgetpassword'
        MDLabel:
            text: "[b]Update Password!![/b]"
            font_size: "23dp"
            pos_hint: {"center_x": 0.7, "center_y": 0.8}
            theme_text_color: "Custom"
            text_color: rgba(97, 93, 91, 255)
            markup : True
        MDLabel:
            text: "[b]Enter New Password[/b]"
            font_size: "15dp"
            pos_hint: {"center_x": 0.57, "center_y": 0.65}
            theme_text_color: "Custom"
            text_color: rgba(97, 93, 91, 255)
            markup: True
        MDTextField:
            id: newpassword
            hint_text: "New Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            size_hint_x: 0.85
            mode: "rectangle"
        MDLabel:
            text: "[b]Confirm Password[/b]"
            font_size: "15dp"
            pos_hint: {"center_x": 0.57, "center_y": 0.45}
            theme_text_color: "Custom"
            text_color: rgba(97, 93, 91, 255)
            markup: True
        MDTextField:
            id: confpassword
            hint_text: "New Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.38}
            size_hint_x: 0.85
            mode: "rectangle"
        MDRaisedButton:
            text: "Save"
            size_hint_x: 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            size_hint_y: 0.1
            md_bg_color: [1, 0.4118, 0.7176, 1]
