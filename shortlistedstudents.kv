MDScreen:
    name: "shortlistedstudents"
    MDFloatLayout:
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.04}
        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":0.14,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                root.manager.current = 'companyhome'
                root.manager.transition.direction = "left"
        MDIconButton:
            icon: "bell"
            pos_hint: {"center_x":0.38,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                app.on_click_showcompanylist()
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x":0.62,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            icon_size: "30dp"
            on_press:
                app.showdetailsofcompanytojobproviding()
                root.manager.current = 'addjob'
                root.manager.transition.direction = "left"
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":0.852,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_release:
                app.display_data2()
                app.shw_image1()
                app.check_and_update_button_state1()
                root.manager.current = 'companyprofile'
                root.manager.transition.direction = "left"
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.95}
        MDLabel:
            id: comp_name
            text: "Shortlisted Students"
            font_name: "DPoppins"
            font_size: "22sp"
            pos_hint: {"center_x":0.65,"center_y":0.94}
            theme_text_color: "Custom"
            text_color: rgba(222, 254, 237,255)


    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_y":0.52}
        size_hint_y:0.75
        ScrollView:

            bar_color: [0, 0, 255, 1]
            bar_width: 2
            MDList:
                id: shortlistedstudent_list
