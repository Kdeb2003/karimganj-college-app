MDScreen:
    name: "updatecompanyprofile"
    MDFloatLayout:
        MDIconButton:
            icon : "chevron-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = 'right'
                app.display_data2()


