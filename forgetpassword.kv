MDScreen:
    name: "forgetpassword"
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_x": 0.1, "center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 0.1, 0.1, 0.1, 1
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'
        Image:
            source: "a.png"
            pos_hint: {"center_x": 0.55, "center_y": 0.8}
            size_hint: 0.8, 0.8
        MDLabel:
            text: "Forgot Password??"
            font_size: "25dp"
            pos_hint: {"center_x": 0.65, "center_y": 0.6}
            theme_text_color: "Custom"
            text_color: 0.4, 0.4, 0.4, 1
        MDLabel:
            text: "[b]Enter Your Registered Email[/b]"
            font_size: "15dp"
            pos_hint: {"center_x": 0.55, "center_y": 0.45}
            theme_text_color: "Custom"
            text_color: 0.4, 0.4, 0.4, 1
            markup: True
        MDTextField:
            id: email_id
            hint_text: "Email ID"
            pos_hint: {"center_x": 0.5, "center_y": 0.37}
            size_hint_x: 0.9
            mode: "rectangle"
        MDRaisedButton:
            text: "Get OTP"
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            size_hint_y: 0.1
            md_bg_color: [1, 0.4118, 0.7176, 1]
            on_release:
                app.send_otp1()
