MDScreen:
    name: "selection"
    MDFloatLayout:
        #md_bg_color: 186/255, 255/255, 255/255,1
        md_bg_color: [1,1,1,1]
        MDIconButton:
            icon : "arrow-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'
                #root.manager.current = 'menu'

        MDLabel:
            text : "Select the right option"
            font_name: "MPoppins"
            font_size : "20sp"
            pos_hint : {"center_x":0.58,"center_y": 0.85}
            color: rgba(0,0,72, 255)
        MDFloatLayout:
            md_bg_color: rgba(0,0,0,255)
            size_hint : 0.9, 0.002
            pos_hint: {"center_x" :0.5, "center_y": 0.83}
        MDFloatLayout:
            MDCheckbox:
                group : "group"
                pos_hint: {"center_x":0.8,"center_y":0.62}
                size_hint: 0.1,0.1
                on_active:
                    root.manager.current = 'signupadmin'
                    app.dizabule1()
            MDCheckbox:
                group : "group"
                pos_hint: {"center_x":0.8,"center_y":0.55}
                size_hint: 0.1,0.1
                on_active:
                    root.manager.current = 'signupother'
                    app.dizabule2()

            MDCheckbox:
                group : "group"
                pos_hint: {"center_x":0.8,"center_y":0.48}
                size_hint: 0.1,0.1
                on_active:
                    root.manager.current = 'signupfacalty'
                    app.dizabule3()
            MDCheckbox:
                group : "group"
                pos_hint: {"center_x":0.8,"center_y":0.42}
                size_hint: 0.1,0.1
                on_active:
                    root.manager.current = 'bekkar2'
                    app.dizabule()
        MDLabel:
            text: "Administrator"
            font_name: "MPoppins"
            font_size: "12sp"
            color : rgba(0,0,72,255)
            pos_hint: {"center_x":0.65,"center_y":0.62}


        MDLabel:
            text: "Convener"
            font_name: "MPoppins"
            font_size: "12sp"
            color : rgba(0,0,72,255)
            pos_hint: {"center_x":0.65,"center_y":0.55}

        MDLabel:
            text: "Company"
            font_name: "MPoppins"
            font_size: "12sp"
            color : rgba(0,0,72,255)
            pos_hint: {"center_x":0.65,"center_y":0.48}

        MDLabel:
            text: "Student"
            font_name: "MPoppins"
            font_size: "12sp"
            color : rgba(0,0,72,255)
            pos_hint: {"center_x":0.65,"center_y":0.42}








