MDScreen:
    name: "shortlistedstudentstopo"
    MDFloatLayout:
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.04}
        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":0.15,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                root.manager.current = 'pohome'
                root.manager.transition.direction = "left"
        MDIconButton:
            icon: "bell"
            pos_hint: {"center_x":0.4,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                root.manager.current = 'PO_Notification'
                root.manager.transition.direction = "left"
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x":0.65,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_press:
                root.manager.current = 'addnotice'
                root.manager.transition.direction = "left"
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":0.852,"center_y":0.05}
            theme_icon_color : "Custom"
            icon_color: rgba(255, 255, 255, 255)
            on_release:
                app.display_data2()
                root.manager.current = 'poprofile'
                root.manager.transition.direction = "left"
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.95}
        MDLabel:
            text: "Application Status"
            font_name: "DPoppins"
            font_size: "20sp"
            pos_hint: {"center_x":0.72,"center_y":0.94}
            theme_text_color: "Custom"
            text_color: rgba(222, 254, 237,255)
    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_y":0.52}
        size_hint_y:0.75
        ScrollView:

            bar_color: [0, 0, 255, 1]
            bar_width: 2
            MDList:
                id: shortlistedstudent_viewtopo_list