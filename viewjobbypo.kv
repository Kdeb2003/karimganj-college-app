MDScreen:
    name: "viewjobtopo"
    MDFloatLayout:
        MDTopAppBar:
            md_bg_color: rgba(95, 176, 179, 255)
            pos_hint: {"center_x":0.5,"center_y":0.95}
        MDLabel:
            text: "Job Details"
            font_name: "DPoppins"
            font_size: "25dp"
            pos_hint: {"center_x":0.8,"center_y":0.95}
            theme_text_color: "Custom"
            text_color: rgba(255,255,255,255)
        MDIconButton:
            icon : "arrow-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(255,255,255,255)
            on_release:
