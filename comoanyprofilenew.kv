MDScreen:
    name: "companyprofile"
    MDFloatLayout:
        md_bg_color: rgba(95, 176, 179, 175)
        MDIconButton:
            icon: "chevron-left"
            pos_hint: {"center_y":0.94}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: rgba(71,92,119,255)
            on_release:
                root.manager.current = "companyhome"
        MDLabel:
            text: '[b]Profile[/b]'
            markup:True
            font_size: "18sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.94}
            halign: "center"
            theme_text_color: "Custom"
            text_color: rgba(0, 0, 0, 255)

        FloatLayout:
            size_hint: None, None
            size: dp(110), dp(110)
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            canvas.before:
                Color:
                    rgba: rgba(102, 102, 102, 255) # Reset color to white for main image background
                Ellipse:
                    size: [dp(110), dp(110)]  # Size for the main image background
                    pos: [self.pos[0], self.pos[1]]  # Position for the main image background
                StencilPush
                Ellipse:
                    size: [dp(110), dp(110)]  # Size for the stencil
                    pos: [self.pos[0], self.pos[1]]  # Position for the stencil
                StencilUse
            canvas.after:
                StencilUnUse
                StencilPop
            Image:
                id: comp_image
                source: "profileplaceholder1.jpg"
                size_hint: None, None
                size: dp(110), dp(110)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                allow_stretch: True
                keep_ratio: False
            MDIconButton:
                icon: "pencil-circle"
                pos_hint: {"center_x": 0.935, "center_y": 0.235}
                icon_size: "35sp"
        MDIconButton:
            id: upload_button1
            icon: "pencil-circle"
            pos_hint: {"center_x": 0.65, "center_y": 0.75}
            icon_size: "35sp"
            on_release:
                app.file_manager_open_comp()

        MDLabel:
            id: name
            text: ''
            bold: True
            markup:True
            font_size: "16sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.67}
            halign: "center"
            theme_text_color: "Custom"
            text_color: rgba(106, 104, 104, 255)

        MDLabel:
            text: '[b]Company[/b]'
            markup:True
            font_size: "14sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.63}
            halign: "center"
            theme_text_color: "Custom"
            text_color: rgba(106, 104, 104, 255)

        MDLabel:
